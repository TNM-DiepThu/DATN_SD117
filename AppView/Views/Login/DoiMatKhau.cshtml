@using AppData.ViewModal.Usermodalview;
@model DoiMatKhauVM;

@{
    ViewData["Title"] = "Sửa thông tin người dùng ";
}
<div class="row">
    <form asp-action="DoiMatKhau">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="username" class="control-label"></label>
            <input asp-for="username" class="form-control" />
            <span asp-validation-for="username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="pass" class="control-label"></label>
            <input asp-for="pass" class="form-control" />
            <span asp-validation-for="pass" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="repass" class="control-label"></label>
            <input asp-for="repass" class="form-control" />
            <span asp-validation-for="repass" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Đổi mật khẩu" class="btn btn-primary" />
        </div>
    </form>
</div>
<script>
    // Lấy các phần tử input và span cho repass và pass
    var repassInput = document.getElementById("repass");
    var passInput = document.getElementById("pass");
    var repassValidation = document.querySelector('[data-valmsg-for="repass"]');

    // Thêm sự kiện 'input' cho trường repass
    repassInput.addEventListener("input", function () {
        if (repassInput.value !== passInput.value) {
            // Nếu repass khác pass, hiển thị thông báo lỗi
            repassValidation.textContent = "Nhập lại mật khẩu không khớp với mật khẩu.";
        } else {
            // Nếu repass trùng khớp với pass, xóa thông báo lỗi
            repassValidation.textContent = "";
        }
    });
</script>