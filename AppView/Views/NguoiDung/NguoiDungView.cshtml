@model IEnumerable<AppData.ViewModal.Usermodalview.NguoiDungVM>

@{
    ViewData["Title"] = "NguoiDungView";
}

<h1>Danh sách người dùng</h1>
<style>
    td .btn {
        margin: 8px;
        width: 90px;
        height: 33px;
    }

    .bi {
        margin: 2px;
    }

    a {
        font-size: 16px;
    }
</style>
<button type="button" class="btn btn-outline-primary"> <a asp-action="CreateNguoiDung">Create New</a></button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Anh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CCCD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenNguoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuanHuyen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThanhPho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Anh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CCCD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNguoiDung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatKhau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuanHuyen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThanhPho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @item.NgaySinh.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @{
                        var gioitinhtxt = item.GioiTinh == 1 ? "Nữ" : "Nam";
                    }
                    @gioitinhtxt
                </td>
                <td>
                    @{
                        var statusText = item.status == 1 ? "Đang hoạt động" : "Không hoạt động";
                    }
                    @statusText
                </td>
                <td>
                    <a href="@Url.Action("EditNguoiDung","NguoiDung",new { id = item.id})">
                        <i class="fas fa-pen" style="color: #007bff;"></i>
                    </a>
                    @* <a href="@Url.Action("GellByIDSanPhamCT","QuanTri",new { id = item.Id})">
                        <i class="fas fa-eye" style="color: #0084ff;"></i>
                    </a> *@
                    <form method="post" action="@Url.Action("Delete", "NguoiDung", new { id = item.id })">
                        @Html.AntiForgeryToken()
                        <button type="submit" onclick="return confirm('Bạn có chắc muốn xóa người dùng này?');">
                            <i class="fas fa-trash" style="color: #ff0000;"></i>
                        </button>
                    </form>
                </td                
            </tr>
        }
    </tbody>
</table>
