@model AppData.model.LichSuHoaDon

@{
    ViewData["Title"] = "UpdateLsHD";
}
<script src="~/js/site.js"></script>
<link href="~/css/site.css" rel="stylesheet" />
<h1>UpdateLsHD</h1>

<h4>LichsuHD</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateLsHD">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Id" class="control-label col-3"></label>
                <div class="col-9">
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <label asp-for="NgayTao" class="control-label col-3"></label>
                <div class="col-9">
                    <input asp-for="NgayTao" class="form-control" />
                    <span asp-validation-for="NgayTao" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <label asp-for="NguoiTao" class="control-label col-3"></label>
                <div class="col-9">
                    <input asp-for="NguoiTao" class="form-control" />
                    <span asp-validation-for="NguoiTao" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <label asp-for="GhiChu" class="control-label col-3"></label>
                <div class="col-9" >
                    <input asp-for="GhiChu" class="form-control" />
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">

                <label asp-for="HoaDon" class="control-label col-3"></label>
                <div class="col-9">

                    @Html.DropDownList("IdHoaDon", ViewBag.HoaDon  as IEnumerable<SelectListItem>, "", null)
                    @Html.ValidationMessageFor(model => model.IdHoaDon, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="nguoiDung" class="control-label col-3"></label>
                <div class="col-9">
                    @Html.DropDownList("IdNguoiDung", ViewBag.User  as IEnumerable<SelectListItem>, "", null)
                    @Html.ValidationMessageFor(model => model.IdNguoiDung, "", new { @class = "text-danger" })
                </div>

            </div>


            <div class="form-group">
                <div class="col-9">
                <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllHDCT">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}